DROP TABLE IF EXISTS hive_ccgl_glacgd;
CREATE EXTERNAL TABLE hive_ccgl_glacgd
(
    `id`               STRING COMMENT '编号',
    `name`             STRING COMMENT '分类名称',
    `create_time`    decimal(24,2) COMMENT '创建时间',
    `operate_time`   STRING COMMENT '修改时间'
) COMMENT '会计日终余额表'
    STORED AS parquet;


